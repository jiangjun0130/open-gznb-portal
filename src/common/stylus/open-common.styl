// 通用block样式
.open-block
  border: 1px solid #eaeefb
  border-radius: 4px
  transition: .2s
  .block-content
    padding: 24px;
    h4
      margin-top 20px
      font-size: 22px
      font-weight: 400
      color: #58B7FF
      display: block;
      width 100%
      height 48px

.grid-content
  border-radius: 4px
  min-height: 36px


.el-row
  margin-bottom: 20px
  &:last-child
    margin-bottom: 0

.el-col
  border-radius: 4px


.bg-transparent
  background transparent

.bg-purple-dark
  background: #99a9bf


.bg-purple
  background: #d3dce6


.bg-purple-light
  background: #e5e9f2


.row-bg
  padding: 10px 0
  background-color: #f9fafc

.time
  font-size: 13px
  color: #999


.bottom
  margin-top: 13px
  line-height: 12px

.button
  padding: 0
  float: right


.image
  width: 100%
  display: block


.clearfix:before,
.clearfix:after
  display: table
  content: ""


.clearfix:after
  clear: both

.img-button
  margin-bottom: 5px

.img-thumbnail
  display: inline-block
  max-width: 100%
  height: 200px
  width 145px
  margin: 5px 0
  background-color: #fff
  border: 1px solid #ddd
  border-radius: 6px
  -webkit-transition: all .2s ease-in-out
.div-new-line
  word-wrap:break-word
